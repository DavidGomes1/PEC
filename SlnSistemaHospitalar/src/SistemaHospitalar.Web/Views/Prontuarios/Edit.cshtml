<label asp-for="conduta" for="conduta" class="color-label">Condutas</label>
<input asp-for="conduta" type="text" class="form-control" id="conduta" aria-describedby="emailHelp" placeholder="Informe a cidade">
<span asp-validation-for="conduta" class="text-danger"></span>

<label asp-for="hipoteseDiagnostica" for="hipoteseDiagnostica" class="color-label">Hipótese Diagnóstica:</label>
<input asp-for="hipoteseDiagnostica" type="text" class="form-control" id="hipoteseDiagnostica" aria-describedby="emailHelp" placeholder="Informe a hipótese diagnóstica">
<span asp-validation-for="hipoteseDiagnostica" class="text-danger"></span>

<label asp-for="prescricao" for="prescricao" class="color-label">Prescricao:</label>
