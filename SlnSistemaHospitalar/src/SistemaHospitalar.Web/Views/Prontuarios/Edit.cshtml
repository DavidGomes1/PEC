<label asp-for="queixaPrincipal" for="queixaPrincipal" class="color-label">Queixa Principal:</label>
<input asp-for="queixaPrincipal" type="text" class="form-control" id="queixaPrincipal" aria-describedby="emailHelp" placeholder="Informe a queixa principal">
<span asp-validation-for="queixaPrincipal" class="text-danger"></span>

<label asp-for="descricao" for="descricao" class="color-label">Descrição: </label>
<input asp-for="descricao" type="text" class="form-control" id="descricao" aria-describedby="emailHelp" placeholder="Informe a descricao">
<span asp-validation-for="descricao" class="text-danger"></span>

<label asp-for="historicoFamiliar" for="historicoFamiliar" class="color-label">Histórico Familiar</label>
<input asp-for="historicoFamiliar" type="text" class="form-control" id="historicoFamiliar" aria-describedby="emailHelp" placeholder="Informe o histórico familiar">
<span asp-validation-for="historicoFamiliar" class="text-danger"></span>

<label asp-for="exameFisico" for="exameFisico" class="color-label">Exame Físico:</label>
<input asp-for="exameFisico" type="text" class="form-control" id="exameFisico" aria-describedby="emailHelp" placeholder="Informe o exame físico">
